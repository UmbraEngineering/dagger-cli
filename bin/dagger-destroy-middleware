#!/usr/bin/env node

require('../lib/utils');

var prompt   = require('co-prompt');
var program  = require('commander');

program
	.usage('<name> [options]')
	.option('-f, --force', 'Do not confirm before taking action')
	.parse(process.argv);

var name = program.args[0];

if (program.force) {
	return doDelete();
}

prompt.confirm('Delete middleware "' + name + '"? [N/y] ')(function(err, ok) {
	process.stdin.pause();
	if (err) {
		throw err;
	}
	if (ok) {
		doDelete();
	}
});

function doDelete() {
	output('Destroying middleware "' + name + '"...');

	var file = 'middleware/' + name + '.js';
	if (! fileExists(file)) {
		output('\n');
		output.error('ERROR: Cannot destroy middleware "' + name + '"; File does not exist.\n');
		process.exit(1);
		return;
	}

	deleteFile(file);

	output(' Done.\n');
}
